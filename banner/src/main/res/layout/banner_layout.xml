<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:clipChildren="false"
    android:background="@drawable/bannerbox">

    <!-- in Relative layout - views have to be defined before being referenced -->
    <ImageButton
        android:id="@+id/Sbackbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/back_button"
        android:visibility="gone"
        android:background="@null"/>


    <ImageButton
        android:id="@+id/levelSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:layout_marginRightPercent="4%"
        android:alpha=".9"
        android:src="@drawable/level_button"
        android:visibility="gone"
        android:background="@null"/>

    <cmu.xprize.banner.persona.Persona
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%"
        android:layout_centerInParent="true"/>

    <ImageButton
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:layout_marginLeftPercent="8%"
        android:alpha=".9"
        android:src="@drawable/exit_button"
        android:visibility="gone"
        android:background="@null"/>

</android.support.percent.PercentRelativeLayout>