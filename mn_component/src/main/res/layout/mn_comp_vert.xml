<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:clipChildren="false">

    <!-- in Relative layout - views have to be defined before being referenced -->
    <Button
        android:id="@+id/Splus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_plusminus"/>

    <cmu.xprize.mn_component.CIconContainer
        android:id="@+id/SiconSet"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Snumber" />

    <TextView
        android:id="@+id/Snumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="20%"
        android:layout_above="@+id/Sminus"
        android:background="@drawable/text_box"
        android:visibility="visible"/>

    <Button
        android:id="@+id/Sminus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_plusminus"/>

</android.support.percent.PercentRelativeLayout>