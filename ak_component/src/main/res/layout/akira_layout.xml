<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <ImageView
        app:layout_widthPercent="100%"
        app:layout_heightPercent="33.3%"
        android:src="@drawable/sky"
        android:scaleType="fitXY"
        android:id="@+id/sky"
    />
    <ImageView
        app:layout_widthPercent="100%"
        app:layout_heightPercent="100%"
        android:src="@drawable/city"
        android:scaleType="fitXY"
        app:layout_marginTopPercent="20%"
        android:id="@+id/city"
    />
    <ImageView
        app:layout_widthPercent="100%"
        app:layout_heightPercent="75%"
        app:layout_marginTopPercent="25%"
        android:src="@drawable/pavement1"
        android:scaleType="fitXY"
        android:id="@+id/pavement"
    />
    <cmu.xprize.ak_component.Player
        app:layout_widthPercent="10%"
        app:layout_heightPercent="18%"
        app:layout_marginTopPercent="80%"
        android:textAlignment="center"
        android:textSize="16sp"
        android:src="@drawable/car_rear"
        android:id="@+id/player"
    />

    <cmu.xprize.ak_component.TeachFinger
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="50%"
        app:layout_marginLeftPercent="40%"
        android:textAlignment="center"
        android:textSize="22sp"
        android:id="@+id/finger"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="60%"
        app:layout_marginLeftPercent="10%"
        android:text="score:0"
        android:textSize="40sp"
        android:id="@+id/score"
    />




</android.support.percent.PercentRelativeLayout>
