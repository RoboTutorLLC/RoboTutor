        "NEXT_DATASET":{"type": "COMMAND", "id": "SAkira", "method": "next" ,"features":""},

        "NEXT_SCENE": {
          "type": "COMMAND", "cmd": "gotoNextScene"
        },

        "NEXT": {"type": "COMMAND", "cmd": "NEXT"  }
      },

      "constraintMap": {

        "COMMENT": "@@@@@  CConstraints @@@@@ ",

        "FTR_RIGHT":{
          "type": "CONDITION",
          "test":"FTR_RIGHT"
        },

        "FTR_WRONG":{
          "type": "CONDITION",
          "test":"FTR_WRONG"
        },

        "FTR_EOD":{
          "type": "CONDITION",
          "test":"FTR_EOD"
        }
      }
    }
