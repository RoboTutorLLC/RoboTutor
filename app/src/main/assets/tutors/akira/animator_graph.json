          "mapname": "INTRO_STATE_TRACK",
          "preenter": ["SET_DATASOURCE"],
          "preexit": ["NEXT_DATASET"
          ],
          "edges": [
            {
              "constraint": "",
              "edge": "POST_QUESTIONBOARD"
            }
          ]
        },

        "POST_QUESTIONBOARD" : {
          "type" : "NODE",
          "COMMENT" : "",
          "maptype": "moduleMap",
          "mapname" : "POST_QUESTION",
          "preexit" : [],
          "edges" : [
            {
              "constraint" : "",
              "edge": "USER_INPUT"
            }
          ]
        },

        "USER_INPUT": {
          "type": "NODE",
          "COMMENT": "When module is complete - move to next scene in the scenegraph",
          "maptype":"moduleMap",
          "mapname": "USER_ANSWER",
          "preenter": [
          ],
          "preexit": [
          ],
          "edges": [
            {
              "constraint":"FTR_RIGHT",
              "edge": "CORRECT"
            },
            {
              "constraint": "",
              "edge": "WRONG"
            }
          ]
        },

        "CORRECT": {
          "type": "NODE",
          "COMMENT": "When module is complete - move to next scene in the scenegraph",
