              "constraint": "FTR_EOD",
              "edge": "NEXTSCENE"
            },

            {
              "constraint": "",
              "edge": "POST_QUESTIONBOARD"
            }
          ]
        },

        "WRONG": {
          "type": "NODE",
          "COMMENT": "When module is complete - move to next scene in the scenegraph",
          "maptype":"actionMap",
          "mapname": "WRONG_TRACK",
          "preenter": [],
          "preexit": ["NEXT_DATASET"
          ],
          "edges": [
            {
              "constraint": "FTR_EOD",
              "edge": "NEXTSCENE"
            },

            {
              "constraint": "",
              "edge": "POST_QUESTIONBOARD"
            }
          ]
        },
        "NEXTSCENE": {
          "type": "NODE",
          "COMMENT": "When module is complete - move to next scene in the scenegraph",
          "maptype":"actionMap",
          "mapname": "NEXT_SCENE",
          "preenter": [],
          "preexit": [],
          "edges": [
          ]
        }
      },

      "moduleMap": {

        "COMMENT": "@@@@@  CModules  @@@@@",

        "PLAYCORRECT": {
          "type": "MODULE",
          "reuse":true,
          "COMMENT": "????",
          "tracks": [
            {"type": "AUDIO", "command": "PLAY", "soundsource": "great.mp3", "features": ""}
          ]
        },
        "PLAYWRONG": {
          "type": "MODULE",
          "reuse":true,
          "COMMENT": "????",
          "tracks": [
            {"type": "AUDIO", "command": "PLAY", "soundsource": "great.mp3", "features": ""}
          ]
        },

        "POST_QUESTION": {
          "type": "MODULE",
          "reuse":true,
          "COMMENT": "",
          "tracks": [
            {"type": "COMMAND", "id": "SAkira", "method": "postQuestionBoard", "parms": "","features":""},
            {"type": "COMMAND", "cmd": "WAIT" }
          ]
        },

        "USER_ANSWER": {
          "type": "MODULE",
          "reuse":true,
          "COMMENT": "",
          "tracks": [
            {"type": "COMMAND", "id": "SAkira", "method": "judge", "parms": "","features":""}
          ]
