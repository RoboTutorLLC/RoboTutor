{
  "animatorMap": {

    "COMMENT": "Spelling",

    "spelling": {

      "type": "ANIMATOR",
      "title": "Spelling",
      "COMMENT": "Spelling",
      "version": "1.0.0",
      "rootnode": "INTRO_STATE",

      "nodeMap": {

        "COMMENT": "@@@@@  CNodes  @@@@@",

        "INTRO_STATE": {
          "type": "NODE",
          "COMMENT": "Intro Clip - we only ever visit this node once",
          "maptype":"moduleMap",
          "mapname": "PLAYINTRO",
          "preenter": ["SET_VERSION", "SET_DATASOURCE"],
          "preexit": [],
          "edges": [
            {
              "constraint": "",
              "edge": "UPDATE_STIMULUS"
            }
          ]
        },

        "UPDATE_STIMULUS": {
          "type": "NODE",
          "COMMENT": "We may say or show the stimulus at this point",
          "maptype":"moduleMap",
          "mapname": "UPDATESTIMULUS",
          "preenter": ["NEXT_DATASET"],
          "preexit": [],
          "edges": [
            {
              "constraint": "",
              "edge": "USER_INPUT"
            }
          ]
        },


        "USER_INPUT": {
          "COMMENT":"Wait for the user to touch",
          "type": "node",
          "maptype":"moduleMap",
          "mapname": "USERINPUT",
          "preenter": [],
          "preexit": [],
          "edges": [
            {"constraint": "FTR_CORRECT", "edge":"CORRECT"},
            {"constraint": "FTR_INCORRECT", "edge":"INCORRECT"}
          ]
        },

        "CORRECT": {
          "COMMENT": "When user selects a correct syllable",
          "type": "node",
          "maptype": "moduleMap",
          "mapname": "PLAYCORRECT",
          "preenter": [],
          "preexit": [],
          "edges": [
            {"constraint": "FTR_EOP", "edge": "NEXT_PROBLEM"},
            {"constraint": "", "edge": "USER_INPUT"}
          ]
        },

        "INCORRECT": {
          "COMMENT": "When user selects an incorrect syllable",
          "type": "node",
          "maptype": "moduleMap",
          "mapname": "PLAYINCORRECT",
          "preenter": [],
          "preexit": [],
          "edges": [
            {"constraint": "", "edge": "USER_INPUT"}
          ]
        },

        "NEXT_PROBLEM": {
          "COMMENT": "",
          "type": "node",
          "maptype": "moduleMap",
          "mapname": "NEXTPROBLEM",
          "preenter": [],
          "preexit": [],
          "edges": [
            {"constraint": "", "edge": "UPDATE_STIMULUS"}
          ]
        },

        "NEXT_SCENE": {
          "type": "NODE",
          "COMMENT": "When module is complete - move to next scene",
          "maptype": "actionMap",
          "mapname": "NEXTSCENE",
          "preenter": ["PLAYEXITCLIP"],
          "preexit": [],
          "edges": [
          ]
        }

      },

      "moduleMap": {

        "COMMENT": "@@@@@  CModules  @@@@@",

        "PLAYINTRO": {
          "type": "MODULE",
          "reuse":true,
          "COMMENT": "????",
          "tracks": [
            {"name": "LOG_EVENT", "type": "QUEUEDCOMMAND", "id": "SSpelling", "method": "logState", "parms": "type#node,value#PLAYINTRO:String", "features":""}
//            {"name":"Intro clip", "type": "AUDIO", "command": "PLAY", "soundsource": "Lets add some numbers now.mp3", "soundpackage":"default", "volume": 1.0, "mode":"flow", "features": ""}
          ]
        },

        "UPDATESTIMULUS": {
          "type": "MODULE",
          "reuse": true,
          "tracks": [
            {"name": "LOG_EVENT", "type": "QUEUEDCOMMAND", "id": "SSpelling", "method": "logState", "parms": "type#node,value#UPDATESTIMULUS:String", "features":""},
            {"name":"Please spell", "type": "AUDIO", "command": "PLAY", "soundsource": "Lets add some numbers now.mp3", "soundpackage":"default", "volume": 1.0, "mode":"flow", "features": ""},
//            {"name":"Play word", "type": "AUDIO", "command": "PLAY", "soundsource": "akalala.mp3","soundpackage": "words","mode":"flow", "features": ""}
            {"name":"Play word", "type": "AUDIO", "command": "PLAY", "soundsource": "{{SSpelling.wordStim}}","soundpackage": "words","mode":"flow", "features": ""}
          ]
        },

        "PLAYCORRECT": {
          "type": "MODULE",
          "reuse": true,
          "COMMENT": "TBD",
          "tracks": [
            {"name": "LOG_EVENT", "type": "QUEUEDCOMMAND", "id": "SSpelling", "method": "logState", "parms": "type#node,value#PLAYCORRECT:String", "features":""},
            {"name":"Read syllable", "type": "AUDIO", "command": "PLAY", "soundsource": "Good.mp3","mode":"flow", "features": ""}
          ]
        },

        "PLAYINCORRECT": {
          "type": "MODULE",
          "reuse": true,
          "COMMENT": "TBD",
          "tracks": [
            {"name": "LOG_EVENT", "type": "QUEUEDCOMMAND", "id": "SSpelling", "method": "logState", "parms": "type#node,value#PLAYINCORRECT:String", "features":""},
//            {"name":"Read syllable", "type": "AUDIO", "command": "PLAY", "soundsource": "Good.mp3","mode":"flow", "features": ""},
            {"name": "After incorrect clip", "type": "AUDIO", "command": "PLAY", "soundsource": "Not quite try again.mp3", "soundpackage":"default", "volume": 1.0, "mode":"flow", "features": ""},
            {"name": "Revert color", "type": "COMMAND", "id": "SSpelling", "method": "revertColor", "features": ""}
          ]
        },

        "PLAYEXITCLIP": {
          "type": "MODULE",
          "reuse": true,
          "COMMENT": "TBD",
          "tracks": [
            {"name": "LOG_EVENT", "type": "QUEUEDCOMMAND", "id": "SSpelling", "method": "logState", "parms": "type#node,value#PLAYEXITCLIP:String", "features":""},
            {"name": "Exit clip", "type": "AUDIO", "command": "PLAY", "soundsource": "Lets add some numbers now.mp3", "soundpackage":"default", "volume": 1.0, "mode":"flow", "features": ""}
          ]
        },

        "NEXTPROBLEM": {
          "type": "MODULE",
          "reuse": true,
          "COMMENT": "TBD",
          "tracks": [
            {"name": "LOG_EVENT", "type": "QUEUEDCOMMAND", "id": "SSpelling", "method": "logState", "parms": "type#node,value#NEXTPROBLEM:String", "features":""},
            {"name": "Problem correct clip", "type": "AUDIO", "command": "PLAY", "soundsource": "Lets add some numbers now.mp3", "soundpackage":"default", "volume": 1.0, "mode":"flow", "features": ""}
          ]
        },

        "USERINPUT": {
          "type": "MODULE",
          "reuse": true,
          "COMMENT": "TBD",
          "tracks": [
            {"name": "LOG_EVENT", "type": "QUEUEDCOMMAND", "id": "SSpelling", "method": "logState", "parms": "type#node,value#WAIT_FOR_INPUT:String", "features":""},

            {"type": "COMMAND", "id": "SSpelling", "method": "setVolatileBehavior", "parms": "NEXT_NODE:String|NEXTNODE:String", "features": ""},
            {"name": "Unlock", "type": "COMMAND", "id": "SSpelling", "method": "unlockLetters", "features": ""},
            {"type": "COMMAND", "cmd": "WAIT"}
          ]
        }
      },

      "actionMap": {

        "COMMENT": "@@@@@  CActions @@@@@ ",

        "SET_VERSION":{"type": "COMMAND", "id": "Sbanner", "method": "setVersionID", "parms": "v.0.0.1:String","features":""},
        "SET_DATASOURCE":{"type": "COMMAND", "id": "SSpelling", "method": "setDataSource", "parms": "LOCAL_FILE:String","features":""},

        "NEXT_DATASET": {"type": "COMMAND", "id": "SSpelling", "method": "next", "features": ""},
        "NEXTNODE": {"type": "COMMAND", "cmd": "NEXT"},

        "NEXTSCENE": {"type":"COMMAND", "cmd": "NEXTSCENE"}
      },

      "constraintMap": {
        "COMMENT": "@@@@@  CConstraints @@@@@ ",

        "FTR_EOD": {
          "type": "CONDITION",
          "test": "FTR_EOD"
        },

        // End of Problem
        "FTR_EOP": {
          "type": "CONDITION",
          "test": "FTR_EOP"
        },

        "FTR_CORRECT":{
          "type": "CONDITION",
          "test":"FTR_CORRECT"
        },

        "FTR_INCORRECT":{
          "type": "CONDITION",
          "test":"FTR_INCORRECT"
        }
      }
    }
  }
}

