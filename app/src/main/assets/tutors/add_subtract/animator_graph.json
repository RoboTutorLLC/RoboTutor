{
  "animatorMap": {
    "COMMENT": "Animation Graph for the Add/Subtract Tutor",

    "add_subtract": {

      "type": "ANIMATOR",
      "title": "Add/Subtract tutor",
      "COMMENT": "This tutor is designed for the Add/Subtract tutor.",
      "version": "1.0.0",
      "rootnode": "INTRO_STATE",

      "nodeMap": {

        "COMMENT": "@@@@@  CNodes  @@@@@",

        "INTRO_STATE": {
          "type": "NODE",
          "COMMENT": "Intro Clip",
          "maptype":"moduleMap",
          "mapname": "PLAYINTRO",
          "preenter":["SET_VERSION","SET_DATASOURCE"],
          "preexit" :[],
          "edges":
          [
            {"constraint":"","edge": "PROBLEM"}
          ]
        },

        // This initializes the dataset display and resets for a new set of attempts
        //
        "PROBLEM":{
          "COMMENT":"This node presents the first problem.",
          "type":"node",
          "maptype":"moduleMap",
          "mapname": "SHOWPROBLEM",
          "preenter":[],
          "preexit" :[],
          "edges":
          [
            {"constraint":"","edge":"NEXTDIGIT"}
          ]
        },

        "NEXTDIGIT":{
          "COMMENT":"This node presents the first digit.",
          "type":"node",
          "maptype":"moduleMap",
          "mapname": "SHOWDIGIT",
          "preenter":["SET_DOTBAGS_INVISIBLE", "CREATE_HESITATION_TIMER"],
          "preexit" :[],
          "edges":
          [
            {"constraint":"","edge":"USERINPUT"}
          ]
        },

        // This waits for input
        //
        "USERINPUT":{
          "COMMENT":"When the user touches for the first time",
          "type":"node",
          "maptype":"moduleMap",
          "mapname": "CLICKDOTS",
          "preenter":[],
          "preexit" :[],
          "edges":
          [
            {"constraint":"FTR_RIGHT","edge":"WHOLECORRECT"},
            {"constraint":"FTR_WRONG","edge":"WHOLEWRONG"}
          ]
        },

        "WHOLECORRECT":{
          "COMMENT":"When user inputs a correct answer...",
          "type":"node",
          "maptype":"moduleMap",
          "mapname": "PLAYCORRECT",
          "preenter":[],
          "preexit" :[],
          "edges":
          [
            {"constraint":"COND_PASS1","edge":"EXITCLIP1"},
            {"constraint":"COND_PASS2","edge":"EXITCLIP2"},
            {"constraint":"","edge":"PROBLEM"}
          ]
        },

        "WHOLEWRONG":{
          "COMMENT":"When user inputs an incorrect answer...",
          "type":"node",
          "maptype":"moduleMap",
          "mapname": "EVALUATEDIGIT",
          "preenter":[],
          "preexit" :[],
          "edges":
          [
            {"constraint":"FTR_RIGHT","edge":"NEXTDIGIT"},
            {"constraint":"FTR_WRONG","edge":"USERINPUT"}
          ]
        },

        "EXITCLIP1": {
          "COMMENT":"Exit Clip for ALL_CORRECT",
          "type":"node",
          "maptype":"moduleMap",
          "mapname": "PLAYEXIT1",
          "preenter":[],
          "preexit" :[],
          "edges":
          [
            {"constraint":"","edge":"NEXTSCENE"}
          ]
        },

        "EXITCLIP2": {"COMMENT":"Exit Clip for NOT_ALL_CORRECT",
          "type":"node",
          "maptype":"moduleMap",
          "mapname": "PLAYEXIT2",
          "preenter":[],
          "preexit" :[],
          "edges":
          [
            {"constraint":"","edge":"NEXTSCENE"}
          ]
        },

        "NEXTSCENE": {
          "type": "NODE",
          "COMMENT": "When module is complete - move to next scene in the scenegraph",
          "maptype":"actionMap",
          "mapname":"GOTONEXTSCENE",
          "preenter": [],
          "preexit": [],
          "edges": [
          ]
        }
      },

      "moduleMap": {
        "COMMENT": "@@@@@  CModules  @@@@@",
        "PLAYINTRO": {
          "type": "MODULE",
          "reuse": true,
          "COMMENT": "TBD",
          "tracks": [
          ]
        },
        "SHOWPROBLEM": {
          "type": "MODULE",
          "reuse": true,
          "COMMENT": "TBD",
          "tracks": [
            {"type": "COMMAND", "id": "SAddSubtract", "method": "next", "features": ""}
          ]
        },

        "SHOWDIGIT": {
          "type": "MODULE",
          "reuse": true,
          "COMMENT": "TBD",
          "tracks": [
            {"type": "COMMAND", "id": "SAddSubtract", "method": "nextDigit", "features": ""}
          ]
        },

        "CLICKDOTS": {
          "type": "MODULE",
          "reuse": true,
          "COMMENT": "TBD",
          "tracks": [
            {"type": "COMMAND", "cmd": "WAIT"}
          ]
        },
        // NOTES:
        // AUDIO soundsource(s) are now relative to a soundpackage - see the tutor_descriptor to see its structure.
        // The "default" sound package is used if none is specified
        // The effect sound packages are special as it is not language sensitive
        //
        "PLAYCORRECT": {
          "type": "MODULE",
          "reuse": true,
          "COMMENT": "TBD",
          "tracks": [
          ]
        },
        // AUDIO filenames should not have spaces or hyphens.
        //
        "PLAYWRONG": {
          "type": "MODULE",
          "reuse": true,
          "COMMENT": "TBD",
          "tracks": [
          ]
        },
        // this is an asynchronous timer driven node
        "EVALUATEWHOLE": {
          "type": "MODULE",
          "reuse": true,
          "COMMENT": "TBD",
          "tracks": [
            {"type": "COMMAND", "id": "SAddSubtract", "method": "evaluateWhole"},
            {"type": "COMMAND", "cmd": "NEXT"}
          ]
        },

        "EVALUATEDIGIT": {
          "type": "MODULE",
          "reuse": true,
          "COMMENT": "TBD",
          "tracks": [
            {"type": "COMMAND", "id": "SAddSubtract", "method": "evaluateDigit"}
          ]
        },

        "PLAYEXIT1":{
          "type": "MODULE",
          "reuse":true,
          "COMMENT": "TBD",
          "tracks": [
          ]
        },

        "PLAYEXIT2":{
          "type": "MODULE",
          "reuse":true,
          "COMMENT": "TBD",
          "tracks": [
          ]
        },
        "FINGERWRITING":{
          "type": "MODULE",
          "reuse":true,
          "COMMENT": "TBD",
          "tracks": [
            {"type": "COMMAND", "id": "SDigitWriter", "method": "onStartWriting", "parms": "CANCEL_REMINDER:String"},
            // This would call the cancel reminder action below when the user starts writing
            {"type": "COMMAND", "id": "Sresponse", "method": "onRecognitionComplete", "parms": "NEXT:String"},
            // This would increment the animation_graph when it is in a wait state.  e.g if it is sitting at the end of a stream audio clip
            {"type": "COMMAND", "cmd": "WAIT" }
            //{"type": "COMMAND", "id": "Sresponse", "method": "show", "parms": "TRUE:Boolean","features":""}
          ]
        }
      },


      "actionMap": {

        "COMMENT": "@@@@@  CActions @@@@@ ",

        "SET_VERSION":{"type": "COMMAND", "id": "Sbanner", "method": "setVersionID", "parms": "v.0.0.1:String","features":""},

        "CREATE_COMPLETION_TIMER": {"type": "TIMER", "id":"CompletionTimer", "startdelay":"0", "period":"10000", "repeat":"false", "action":"CREATEANDSTART", "ontimer":"EVALUATEWHOLE", "features": "" },

        "RESTART_COMPLETION_TIMER": {"type": "TIMER", "id":"CompletionTimer", "action":"RESTART", "ontimer":"EVALUATEWHOLE", "features": "" },
        "CANCEL_COMPLETION_TIMER": {"type": "TIMER", "id":"CompletionTimer", "action":"CANCEL", "features": "" },


//        "SET_VISIBILITY":{"type": "COMMAND", "id": "SAddSubtract", "method": "setVisible", "parms":"false:bool", "features":""},
        "SET_DOTBAGS_VISIBLE": {"type": "COMMAND", "id": "SAddSubtract", "method": "setDotBagsVisible", "parms":"true:bool"},
        "SET_DOTBAGS_INVISIBLE": {"type": "COMMAND", "id": "SAddSubtract", "method": "setDotBagsVisible", "parms":"false:bool"},
        "CREATE_HESITATION_TIMER": {"type": "TIMER", "id":"HesitationTimer", "startdelay":"0", "period":"3000", "repeat":"false", "action":"CREATEANDSTART", "ontimer":"SET_DOTBAGS_VISIBLE"},
//        {"type": "TIMER", "id":"HesitationTimer", "startdelay":"0", "action":"CREATEANDSTART", "repeat":"false", "period":"1000", "features":"", "onTimer":"SET_VISIBILITY"},

        "SET_DATASOURCE":{"type": "COMMAND", "id": "SAddSubtract", "method": "setDataSource", "parms": "[file]asm_data.json:String","features":""},
        "NEXT_DATASET":{"type": "COMMAND", "id": "SAddSubtract", "method": "next" ,"features":""},

        "RESET":{"type": "COMMAND", "id": "SAddSubtract", "method": "reset" ,"features":""},

        "GOTONEXTSCENE": {"type": "COMMAND", "cmd": "NEXTSCENE" },
        "NEXT": {"type": "COMMAND", "cmd": "NEXT" },
        "PAUSE":{"type": "COMMAND", "cmd": "WAIT" },

        //FINGERWRITING ADDITIONS
        "PLAY_CHIME": {"type": "AUDIO", "command": "PLAY","soundpackage":"chimes", "soundsource": "{{TestChimes}}.mp3", "repeat":false, "volume": ".9", "mode":"event", "features": ""},

        "FW_DISABLE":{"type": "COMMAND", "id": "SfingerWriter", "method": "enable", "parms": "FALSE:Boolean","features":""},
        //disable FingerWriting
        "FW_ENABLE":{"type": "COMMAND", "id": "SfingerWriter", "method": "enable", "parms": "TRUE:Boolean","features":""}
        //enable FingerWriting

        //FINGERWRITING ADDITIONS


      },


      // Use FTR_ Prefix on "features" to facilitate identification during debugging
      //

      "constraintMap": {
        "COMMENT": "@@@@@  CConstraints @@@@@ ",

        "COND_PASS1": {
          "type": "CONDITION",
          "If": "FTR_NOWORDS && ALL_CORRECT",
          "Then":"true",
          "Else":"false"
        },

        "COND_PASS2": {
          "type": "CONDITION",
          "If": "FTR_NOWORDS && NOT_ALL_CORRECT",
          "Then":"true",
          "Else":"false"
        },

        "FTR_NOWORDS":{
          "type": "CONDITION",
          "test":"FTR_NOWORDS"
        },

        "FTR_WORDS":{
          "type": "CONDITION",
          "test":"!FTR_NOWORDS"
        },

        "ALL_CORRECT": {
          "type": "CONDITION",
          "test": "ALL_CORRECT"
        },
        "NOT_ALL_CORRECT": {
          "type": "CONDITION",
          "test": "!ALL_CORRECT"
        },
        "FTR_RIGHT": {
          "type": "CONDITION",
          "test": "FTR_RIGHT"
        },
        "FTR_WRONG": {
          "type": "CONDITION",
          "test": "FTR_WRONG"
        },
        "FTR_NO_ACTION": {
          "type": "CONDITION",
          "test": "FTR_NO_ACTION"
        }
      }
    }
  }
}