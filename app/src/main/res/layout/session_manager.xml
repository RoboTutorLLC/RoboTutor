<?xml version="1.0" encoding="utf-8"?>

<!-- NOTE: The id of the topmost container below must match the XML filename -->

<cmu.xprize.robotutor.tutorengine.widgets.core.TScenePercentLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/session_manager">


    <cmu.xprize.robotutor.tutorengine.widgets.core.TMnComponent
        android:id="@+id/SmnComponent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        app:layout_heightPercent="90%"
        app:layout_marginRightPercent="12%"
        android:background="#0ff"/>

    <cmu.xprize.robotutor.tutorengine.widgets.core.TButton
        android:id="@+id/SdoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:layout_marginBottomPercent="25%"
        android:textSize="32sp"
        android:text="Done"
        android:background="#ff0"/>

</cmu.xprize.robotutor.tutorengine.widgets.core.TScenePercentLayout>